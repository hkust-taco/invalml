abstract class Eff with
  fun perform(a): ()

// functions and lambdas inside handlers
:effectHandlers
:stackSafe 100
:expect 50005000
fun foo(h) = h.perform
handle h = Eff with
  fun perform(resume) =
    let f = ()
    set f = n =>
      if n <= 0 then 0
      else n + f(n-1)
    resume(f(10000))
foo(h)
//│ = 50005000

// function call and defn inside handler
:effectHandlers
:stackSafe 100
:expect 50005000
handle h = Eff with
  fun perform(resume) =
    let f = ()
    set f = n =>
      if n <= 0 then 0
      else n + f(n-1)
    resume(f(10000))
in
  fun foo(h) = h.perform
  foo(h)
//│ = 50005000

